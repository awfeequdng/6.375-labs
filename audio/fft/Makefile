### Makefile for the fft project
### Generated by Bluespec Workstation on Tue Feb 19 17:37:18 EST 2013

default: full_clean compile link simulate

cl: compile link
cls: compile link simulate

.PHONY: compile
compile:
	@echo Compiling...
	bsc -u -sim -simdir bscdir -bdir bscdir -info-dir bscdir -keep-fires -aggressive-conditions -steps-warn-interval 200000 -p .:%/Prelude:%/Libraries:./../common:./../fir:%/Libraries/BlueNoC -g mkTestDriver  ../common/TestDriver.bsv 
	@echo Compilation finished

.PHONY: link
link:
	@echo Linking...
	bsc -e mkTestDriver -sim -o ./out -simdir bscdir -p bscdir:.:%/Prelude:%/Libraries:./../common:./../fir:%/Libraries/BlueNoC -keep-fires 
	@echo Linking finished

.PHONY: simulate
simulate:
	@echo Simulation...
	./out 
	@echo Simulation finished

.PHONY: clean
clean:
	exec rm -f bscdir/AudioPipeline.bo bscdir/TestDriver.bo bscdir/Splitter.bo bscdir/Chunker.bo bscdir/AudioProcessorTypes.bo bscdir/Multiplier.bo bscdir/FFT.bo bscdir/FIRFilter.bo bscdir/FilterCoefficients.bo
	exec rm -f bscdir/mkTestDriver.ba bscdir/mkMultiplier.ba
	exec rm -f bscdir/mkTestDriver.o bscdir/model_mkTestDriver.o bscdir/mkMultiplier.o

.PHONY: full_clean
full_clean:
	rm -f bscdir/AudioPipeline.bo bscdir/TestDriver.bo bscdir/Splitter.bo bscdir/Chunker.bo bscdir/AudioProcessorTypes.bo bscdir/Multiplier.bo bscdir/FFT.bo bscdir/FIRFilter.bo bscdir/FilterCoefficients.bo
	rm -f bscdir/mkTestDriver.ba bscdir/mkMultiplier.ba
	rm -f bscdir/mkTestDriver.o bscdir/model_mkTestDriver.o bscdir/mkMultiplier.o
	rm -f bscdir/model_mkTestDriver.h bscdir/mkTestDriver.h
	rm -f bscdir/mkTestDriver.cxx bscdir/model_mkTestDriver.cxx
	rm -f bscdir/mkMultiplier.h
	rm -f bscdir/mkMultiplier.cxx
